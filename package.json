{
  "name": "braiins-os-mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Braiins OS+ miner management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "jest --config config/jest.config.js --coverage",
    "test:unit": "jest --config config/jest.config.js --testPathPattern=tests/unit",
    "test:integration": "jest --config config/jest.config.js --testPathPattern=tests/integration",
    "test:e2e": "jest --config config/jest.config.js --testPathPattern=tests/e2e",
    "test:watch": "jest --config config/jest.config.js --watch",
    "docker:build": "docker build -f docker/Dockerfile -t braiins-os-mcp:latest .",
    "docker:run": "docker run -p 3000:3000 braiins-os-mcp:latest",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up",
    "docker:dev:down": "docker-compose -f docker/docker-compose.yml down",
    "health-check": "curl -sf http://localhost:3000/health || exit 1",
    "docs:generate": "typedoc --out docs/api src/",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "braiins",
    "mining",
    "bitcoin",
    "asic",
    "claude",
    "model-context-protocol"
  ],
  "author": "Ryno Crypto Mining Services",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ryno-Crypto-Mining-Services/braiins-os-mcp-server"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3",
    "winston": "^3.19.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
